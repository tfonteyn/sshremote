<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SSHButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/btn_margin</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- An Activity primary/top toolbar -->
    <style name="Toolbar.Activity"
           parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
    </style>

    <style name="Widget.App.FloatingActionButton"
           parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <!-- Button (icon only) positioned 'after' an EditText; serving as a extended edit action. -->
    <style name="TIL.EditText.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:enabled">true</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="iconTint">?attr/editTextColor</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="TIL.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/til_field_margin</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <!-- The TextInputLayout view for a NON-editable AutoCompleteTextView;
     equivalent of a Spinner. -->
    <style name="TIL.ExposedDropdownMenu"
           parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- make the drop down arrow better visible. -->
        <item name="endIconTint">?attr/colorOnSurface</item>
        <item name="android:layout_margin">@dimen/til_field_margin</item>
    </style>

    <style name="TIE" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TIE.password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Progress.Container" parent="">
        <item name="android:alpha">0.5</item>
        <item name="android:background">@color/grey_100</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">@dimen/progress_z_backdrop</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Progress.Circle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/progress_z</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">?attr/colorPrimaryDark</item>
        <item name="indicatorSize">96dp</item>
        <item name="trackColor">?attr/colorSecondary</item>
    </style>
</resources>
